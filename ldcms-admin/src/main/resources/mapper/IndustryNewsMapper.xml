<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.dromara.web.mapper.IndustryNewsMapper">

    <resultMap type="org.dromara.web.domain.vo.IndustryNewsVo" id="IndustryNewsVoResult">
    </resultMap>

    <select id="selectListByIndustryNews" resultMap="IndustryNewsVoResult">
        SELECT id,main_title,creation_date,content,picture,state
        FROM industry_news
        WHERE state=1
    </select>

    <select id="selectAllByIndustryNews" resultMap="IndustryNewsVoResult">
        SELECT id,main_title,creation_date,content,picture,state
        FROM industry_news
        WHERE state=1
    </select>

    <select id="selectListById" resultMap="IndustryNewsVoResult">
        SELECT id,main_title,creation_date,content,picture,state
        FROM industry_news
        WHERE state=1 AND id=#{id}
    </select>

    <select id="selectCountByIndustryNews" resultType="int">
        SELECT count(1)
        FROM industry_news
        WHERE state = 1
    </select>

    <select id="selectVagueByMainTitle" resultMap="IndustryNewsVoResult">
        SELECT id,main_title,creation_date,content,picture,state
        FROM industry_news
        WHERE main_title LIKE CONCAT('%', #{mainTitle}, '%') AND state = 1
    </select>

    <select id="selectVagueCountByMainTitle" resultType="int">
        SELECT count(1)
        FROM industry_news
        WHERE main_title LIKE CONCAT('%', #{mainTitle}, '%') AND state = 1
    </select>

    <select id="selectAllStorageToRedis" resultMap="IndustryNewsVoResult">
        SELECT id,main_title,creation_date,content,picture,state
        FROM industry_news
        WHERE state=1
    </select>
    <select id="selectCountToRedis" resultType="int">
        SELECT count(1)
        FROM industry_news
        WHERE state = 1
    </select>

</mapper>
